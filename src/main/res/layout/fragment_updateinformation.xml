<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/updateInformationFragmentTop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity$PlaceholderFragment">

    <!-- Server error message view -->
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/updateInformationServerErrorBar"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/updateInformationServerErrorTextView"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:gravity="center"/>

    <!-- New app version notification view -->
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/updateInformationNewAppNotificationBar"
        android:visibility="gone"
        android:layout_below="@id/updateInformationServerErrorBar"
        android:background="@color/holo_green_light"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/updateInformationNewAppNotificationTextView"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_below="@id/updateInformationServerErrorBar"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:linksClickable="true"
        android:gravity="center"/>

    <!-- First server message view -->
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/updateInformationFirstServerMessageBar"
        android:layout_below="@id/updateInformationNewAppNotificationBar"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/updateInformationFirstServerMessageTextView"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_below="@id/updateInformationNewAppNotificationBar"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:gravity="center"/>

    <!-- Second server message view -->
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/updateInformationSecondServerMessageBar"
        android:layout_below="@id/updateInformationFirstServerMessageBar"
        android:visibility="gone"
        android:background="@color/holo_red_dark"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/updateInformationSecondServerMessageTextView"
        android:textColor="@android:color/white"
        android:layout_below="@id/updateInformationFirstServerMessageBar"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:gravity="center"/>


    <!-- No connection view -->
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/updateInformationNoConnectionBar"
        android:visibility="gone"
        android:background="@color/holo_red_dark"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/updateInformationNoConnectionTextView"
        android:textColor="@android:color/white"
        android:text="@string/error_no_internet_connection"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:gravity="center"/>

    <!-- Main screen -->
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/updateInformationRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_below="@id/updateInformationNoConnectionBar"
        android:layout_above="@+id/updateInformationAdView">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:id="@+id/relativeLayout"
            tools:context=".MainActivity$PlaceholderFragment">

            <TextView
                android:text="@string/update_information_latest_available_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_centerHorizontal="true"
                android:id="@+id/headerLabel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:id="@+id/updateInformationBuildNumberView"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="0dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_below="@+id/headerLabel"/>


            <com.github.mikephil.charting.charts.PieChart
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/updateInformationRollOutPercentageDiagram"
                android:layout_below="@+id/updateInformationBuildNumberView"
                android:layout_marginTop="11dp"
                android:contentDescription="@string/update_information_stats_description"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/buttonTable"
                android:layout_below="@+id/updateInformationRollOutPercentageDiagram">
                <TableRow>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/download"
                        android:id="@+id/updateInformationDownloadButton"
                        android:background="@android:color/transparent"
                        android:textColor="@color/lightBlue"
                        android:enabled="false"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/install_guide"
                        android:id="@+id/updateInstallationInstructionsButton"
                        android:enabled="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/lightBlue"
                        android:background="@android:color/transparent"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:onClick="UpdateInstructions"
                        />

                </TableRow>
            </TableLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tableHost"
                android:layout_below="@id/buttonTable"
                android:layout_centerHorizontal="true">
                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/downloadSizeTable">
                    <TableRow>
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:contentDescription="@string/icon"
                            android:src="@drawable/icon_download_size"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:id="@+id/updateInformationDownloadSizeView"
                            android:gravity="center"
                            android:layout_gravity="center_vertical" />
                    </TableRow>
                </TableLayout>


                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lastUpdatedTable"
                    android:layout_below="@+id/downloadSizeTable">
                    <TableRow>
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:contentDescription="@string/icon"

                            android:src="@drawable/icon_last_updated"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center"
                            android:id="@+id/updateInformationUpdatedDataView"
                            android:layout_gravity="center_vertical" />



                    </TableRow>
                </TableLayout>

            </RelativeLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/updateInformationUpdateDescriptionButton"
            android:text="@string/update_information_update_description_button_text"
            android:layout_below="@+id/tableHost"
            android:background="@android:color/transparent"
            android:textColor="@color/lightBlue"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
</ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/updateInformationSystemIsUpToDateRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_below="@id/updateInformationSecondServerMessageBar"
        android:layout_above="@+id/updateInformationAdView">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:id="@+id/relativeLayout2"
                tools:context=".MainActivity$PlaceholderFragment">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/updateInformationSystemIsUpToDateHeader"
                    android:text="@string/update_information_system_is_up_to_date"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"/>

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:id="@+id/updateInformationSystemIsUpToDateImage"
                    android:layout_below="@id/updateInformationSystemIsUpToDateHeader"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"

                    android:contentDescription="@string/icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/updateInformationSystemIsUpToDateVersionTextView"
                    android:layout_below="@id/updateInformationSystemIsUpToDateImage"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/updateInformationSystemIsUpToDateDateTextView"
                    android:layout_below="@id/updateInformationSystemIsUpToDateVersionTextView"
                    android:layout_centerHorizontal="true"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/updateInformationSystemIsUpToDateDateTextView"
                    android:id="@+id/updateInformationSystemIsUpToDateStatisticsButton"
                    android:text="@string/update_information_view_update_information"
                    android:background="@android:color/transparent"
                    android:textColor="@color/lightBlue"/>

            </RelativeLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
    <com.google.android.gms.ads.AdView
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/updateInformationAdView"
        ads:adSize="BANNER"
        ads:adUnitId="@string/update_information_advertising_id"
        />
</RelativeLayout>