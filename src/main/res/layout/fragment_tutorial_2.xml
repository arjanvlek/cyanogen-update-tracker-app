<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arjanvlek.cyngnotainfo.views.TutorialActivity.SimpleTutorialFragment">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.arjanvlek.cyngnotainfo.views.UpdateInstallationGuideActivity.TutorialFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tut1bText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/help_how_works_app"
                android:textAppearance="?android:textAppearanceLarge"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tut1bText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tut1bText1"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="@string/help_top_update"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/material_blue_grey" />

            <TextView
                android:id="@+id/tut1bText2a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tut1bText2"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="@string/help_middle_stats"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/material_blue_grey" />

            <TextView
                android:id="@+id/tut1bText2b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tut1bText2a"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="@string/help_bottom_description"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/material_blue_grey" />

            <TextView
                android:id="@+id/tut1bText2c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tut1bText2b"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="@string/help_used_symbols"
                android:textAppearance="?android:textAppearanceLarge"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tut1bText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tut1bText2c"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/tut1bdownloadSizeImage"
                android:layout_toRightOf="@+id/tut1bdownloadSizeImage"
                android:gravity="center_vertical"
                android:minHeight="50dp"
                android:text="@string/help_symbol_download"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/material_blue_grey" />

            <ImageView
                android:id="@+id/tut1bdownloadSizeImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/tut1bText4"
                android:contentDescription="@string/icon"
                android:src="@drawable/icon_download_size" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
