<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.arjanvlek.cyngnotainfo.views.UpdateInstallationInstructionsActivity.TutorialFragment">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/tut3Image1"
        android:src="@drawable/tutorial_step3"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/tutorial_image_description" />
    <TextView android:id="@+id/tut3Text1" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tut3Image1"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:textAppearanceLarge"
        android:textStyle="bold"
        android:text="@string/tutorial_step3_apply_update"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tut2Text2"
        android:layout_below="@+id/tut3Text1"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/material_blue_grey_800"
        android:layout_marginTop="20dp"
        android:text="@string/tutorial_step3_recovery_apply"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tut2Text2"
        android:id="@+id/tut2Text3"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/material_blue_grey_800"
        android:layout_marginTop="20dp"
        android:text="@string/tutorial_step3_recovery_internal_storage"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tut2Text3"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/material_blue_grey_800"
        android:layout_marginTop="20dp"
        android:text="@string/tutorial_step3_browse_for_update"
        />
</RelativeLayout>
