<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.arjanvlek.cyngnotainfo.views.UpdateInstallationInstructionsActivity.TutorialFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/tut3Image1"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/tutorial_image_description"
            android:src="@drawable/tutorial_step3" />

        <TextView
            android:id="@+id/tut3Text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tut3Image1"
            android:layout_centerHorizontal="true"
            android:text="@string/tutorial_step3_apply_update"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tut2Text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tut3Text1"
            android:layout_marginTop="20dp"
            android:text="@string/tutorial_step3_recovery_apply"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/material_blue_grey_800" />

        <TextView
            android:id="@+id/tut2Text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tut2Text2"
            android:layout_marginTop="20dp"
            android:text="@string/tutorial_step3_recovery_internal_storage"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/material_blue_grey_800" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tut2Text3"
            android:layout_marginTop="20dp"
            android:text="@string/tutorial_step3_browse_for_update"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/material_blue_grey_800" />
    </RelativeLayout>
</ScrollView>
