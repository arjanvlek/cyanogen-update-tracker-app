<ScrollView android:id="@+id/device_information_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    tools:context=".view.MainActivity"
    android:fillViewport="false"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/device_information_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/device_information_your_device"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/device_information_device_image"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:layout_alignParentTop="true"
                android:layout_below="@+id/device_information_header"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:contentDescription="@string/device_information_image_description"
                android:src="@drawable/icon_phone" />

            <TextView
                android:id="@+id/device_information_soc_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/device_information_device_image"
                android:layout_marginTop="5dp"
                android:text="@string/device_information_system_on_a_chip" />

            <TextView
                android:id="@+id/device_information_soc_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/device_information_device_image"
                android:layout_marginTop="5dp"
                android:gravity="end" />

            <TextView
                android:id="@+id/device_information_cpu_freq_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/device_information_soc_label"
                android:layout_marginTop="5dp"
                android:text="@string/device_information_cpu_frequency" />

            <TextView
                android:id="@+id/device_information_cpu_freq_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/device_information_soc_field"
                android:layout_marginTop="5dp"
                android:gravity="end" />

            <TextView
                android:id="@+id/device_information_memory_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/device_information_cpu_freq_label"
                android:layout_marginTop="5dp"
                android:text="@string/device_information_amount_of_memory" />

            <TextView
                android:id="@+id/device_information_memory_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/device_information_cpu_freq_field"
                android:layout_marginTop="5dp"
                android:gravity="end" />

            <TextView
                android:id="@+id/device_information_cyanogen_os_ver_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/device_information_memory_label"
                android:layout_marginTop="5dp"
                android:text="@string/device_information_cyanogen_os_version" />

            <TextView
                android:id="@+id/device_information_cyanogen_os_ver_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/device_information_memory_field"
                android:layout_marginTop="5dp"
                android:gravity="end" />

            <TextView
                android:id="@+id/device_information_os_ver_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/device_information_cyanogen_os_ver_label"
                android:layout_marginTop="5dp"
                android:text="@string/device_information_os_version" />

            <TextView
                android:id="@+id/device_information_os_ver_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/device_information_cyanogen_os_ver_field"
                android:layout_marginTop="5dp"
                android:gravity="end" />

            <TextView
                android:id="@+id/device_information_incremental_os_ver_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/device_information_os_ver_label"
                android:layout_marginTop="5dp"
                android:text="@string/device_information_incremental_os_version" />

            <TextView
                android:id="@+id/device_information_incremental_os_ver_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/device_information_os_ver_field"
                android:layout_marginTop="5dp"
                android:gravity="end" />

            <TextView
                android:id="@+id/device_information_os_patch_level_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/device_information_incremental_os_ver_label"
                android:layout_marginTop="5dp"
                android:text="@string/device_information_patch_level_version" />

            <TextView
                android:id="@+id/device_information_os_patch_level_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/device_information_incremental_os_ver_field"
                android:layout_marginTop="5dp"
                android:gravity="end" />

            <TextView
                android:id="@+id/device_information_serial_number_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/device_information_os_patch_level_field"
                android:layout_marginTop="5dp"
                android:text="@string/device_information_serial_number" />

            <TextView
                android:id="@+id/device_information_serial_number_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/device_information_os_patch_level_field"
                android:gravity="end" />

        </RelativeLayout>
    </ScrollView>