<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".view.SetupActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/introduction_step_5_image"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/install_guide_image_description"
            android:src="@drawable/icon_phone" />

        <TextView
            android:id="@+id/introduction_step_5_header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/introduction_step_5_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/introduction_choose_device"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/settingsDeviceSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/introduction_step_5_header_text"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp" />

        <ProgressBar
            android:id="@+id/settingsDeviceProgressBar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@id/settingsDeviceSpinner"
            style="?android:attr/progressBarStyleSmall"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/settingsDeviceSpinner"
            android:layout_toRightOf="@id/settingsDeviceSpinner"/>

        <TextView
            android:id="@+id/introduction_step_5_text_block_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/settingsDeviceSpinner"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/introduction_page_2"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/material_blue_grey" />


    </RelativeLayout>
</ScrollView>
